\newcommand{\figtwocol}[4]
{
  \begin{figure}
    \begin{minipage}{.46\hsize}
      \centering
      \vspace*{-4mm}
      \includegraphics[width=\textwidth, height=.5\vsize]{{#1}}
      \vspace*{-6mm}
      \caption{#2}
    \end{minipage}
    \begin{minipage}{.46\hsize}
      \centering
      \vspace*{-4mm}
      \includegraphics[width=\textwidth, height=.5\vsize]{{#3}}
      \vspace*{-6mm}
      \caption{#4}
    \end{minipage}
  \end{figure}
}

